# top-most EditorConfig file
root = true

# 4 space indentation
[*]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# 2 space indentation and utf-8 for *.yml, package.json, and .json files under src
[{*.yml,package.json,*.json}]
indent_size = 2
charset = utf-8
